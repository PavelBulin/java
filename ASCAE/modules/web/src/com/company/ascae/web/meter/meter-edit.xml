<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.ascae.web.meter.MeterEdit"
        datasource="meterDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.ascae.web.meter">
    <dsContext>
        <datasource id="meterDs"
                    class="com.company.ascae.entity.Meter"
                    view="meter-with-consumer"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="meterDs">
            <column width="250px">
                <field property="consumer"/>
                <field property="serialNO"/>
                <field property="current_indicators"/>
                <field property="is_used"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
